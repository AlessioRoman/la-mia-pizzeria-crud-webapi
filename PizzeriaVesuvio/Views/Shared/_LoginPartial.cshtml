@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex gap-20 justify-center">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">ACCOUNT</a>
    </li>
    <li>
        <form id="logoutForm" class="form-inline d-flex justify-content-center align-items-center gap-5" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button id="logout" type="submit" class="nav-link">LOGOUT</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
    </li>
    <li>
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
    </li>
}
</ul>
